---
interface Props {
	title: string;
	heading: string;
}
const { title } = Astro.props;
// We defininerly do not need heading in the props as it could just be a H1 tag on each page
const { heading } = Astro.props;
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="viewport" content="wideth=device-width, initial-scale=1" />
		<!-- !!!What does the generator do? -->
		<meta name="generator" content={Astro.generator} />
		<style>
			/* !!!Put this in tailwind sometime */
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Regular.woff2") format("woff2");
				font-display: swap;
				font-weight: 400;
			}
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Italic.woff2") format("woff2");
				font-display: swap;
				font-weight: 400;
				font-style: italic;
			}
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Bold.woff2") format("woff2");
				font-display: swap;
				font-weight: 700;
				font-style: Bold;
			}
		</style>
	</head>
	<body>
		<div class="max-w-5xl mx-auto">
			<Header />
			<div class="px-4 max-w-4xl mx-auto mt-16">
				<h1 class="mb-6 text-6xl">{heading}</h1>
				<slot />
			</div>
			<Footer />
		</div>
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
