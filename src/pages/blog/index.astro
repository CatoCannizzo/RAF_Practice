---
//This index page creates a route in the website that has the same route as the parent folder, allowing us to keep all related pages together

import Base from "@layouts/Base.astro";
import BlogPostLayout from "@components/BlogListFormatter.astro";
// import TagLister from "@components/TagLister.astro";
let posts = await Astro.glob("./*.md");

posts = posts.sort((a, b) => {
	if (a.frontmatter.pubDate > b.frontmatter.pubDate) {
		return -1;
	}
	if (b.frontmatter.pubDate > a.frontmatter.pubDate) {
		return 1;
	}
	return 0;
});

if (import.meta.env.PROD) {
	posts = posts.filter((post) => !post.frontmatter.draft);
}
---

<Base title="My Blog Posts" , heading="My Blog Posts">
	<div>
		<!-- <TagLister /> -->
		<ul>
			{
				posts.map((post) => (
					<BlogPostLayout
						url={post.url}
						draft={post.frontmatter.draft}
						title={post.frontmatter.title}
						pubDate={post.frontmatter.pubDate}
						tags={post.frontmatter.tags}
					/>
				))
			}
		</ul>
	</div>
</Base>
