---
import Base from "@layouts/BaseLO.astro";
import { formatDate } from "../utils.ts";

//const { title, date, author, draft } = Astro.props.frontmatter;
const { frontmatter } = Astro.props;
---

<Base title="Blog Post" heading={frontmatter.title}>
	<div class="prose">
		{
			frontmatter.draft && (
				<p class="bg-red-700 text-white inline-block px-2 mb-4">DRAFT</p>
			)
		}
		<div class="flex m-1 mr-auto">
			{frontmatter.tags && frontmatter.tags.map((tag)=>(
				<div class="bg-teal-500 px-0.5 mx-1 rounded">
					<a class="text-white text-sm" href=`tags/${tag}`>{tag}</a>
				</div>
			))}
		</div>
		{
			frontmatter.image && (
				<img
					src={frontmatter.image.url}
					width="300"
					alt={frontmatter.image.alt}
				/>
			)
		}
		<p>Written by: {frontmatter.author}</p>
		<p class="mb-4">{formatDate(frontmatter.pubDate)}</p>

		<slot />
	</div>
</Base>
