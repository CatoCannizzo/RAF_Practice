---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
//https://stackoverflow.com/questions/38729486/typescript-difference-between-import-and-import-with-curly-braces

const { title } = Astro.props;
const { heading } = Astro.props;
---

<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="viewport" content="wideth=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<style>
			/* !!!Put this in tailwind sometime */
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Regular.woff2") format("woff2");
				font-display: swap;
				font-weight: 400;
			}
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Italic.woff2") format("woff2");
				font-display: swap;
				font-weight: 400;
				font-style: italic;
			}
			@font-face {
				font-family: "Inter";
				src: url("/fonts/Inter-Bold.woff2") format("woff2");
				font-display: swap;
				font-weight: 700;
				font-style: Bold;
			}
			/* !!! Prevents scroll bar from shifting screen! */
			html {
				overflow-x: hidden;
				margin-right: calc(-1 * (100vw - 100%));
			}
		</style>
	</head>
	<body class="dark:bg-zinc-950 dark:text-white">
		<div class="mx-auto max-w-5xl">
			<Header />
			<div transition:animate="slide" class="mx-auto mt-16 max-w-4xl px-4">
				<h1 class="mb-6 text-6xl">{heading}</h1>
				<slot />
			</div>
			<Footer />
		</div>
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
