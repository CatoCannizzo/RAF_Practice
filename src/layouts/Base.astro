---
interface Props {
   title: string;
   heading: string;
};
const {title} = Astro.props;
const {heading} = Astro.props;
import Navbar from '@components/Navbar.astro'
---
<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title> {title} / Cannizzian Cast</title>
      <meta name="viewport" content="wideth=device-width, initial-scale=1">
      <style>
         @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Regular.woff2") format("woff2");
            font-display: swap;
            font-weight: 400;
         }
         @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Italic.woff2") format("woff2");
            font-display: swap;
            font-weight: 400;
            font-style: italic;
         }
         @font-face {
            font-family: "Inter";
            src: url("/fonts/Inter-Bold.woff2") format("woff2");
            font-display: swap;
            font-weight: 700;
            font-style: Bold;
         }

      </style>
   </head>
   <body>
      <div class="max-w-5xl mx-auto">
            <Navbar/>
            <div class="max-w-4xl mx-auto mt-16">
               <h1 class="mb-6 text-6xl">{heading}</h1>
               <slot/>
            </div>
      </div>
   </body>
</html>